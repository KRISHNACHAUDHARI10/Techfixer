<body>
  <div class="hero">
    <nav>
      <img src="/images/logo.png" class="logo" />
      <ul>
        <li><a href="/user/">Home</a></li>
        <li><a href="/user/about">About</a></li>
        <li><a href="/user/service">Service</a></li>
        <li><a href="/user/Blog">Blog</a></li>
        <li><a href="/user/contact">Contact</a></li>
        <li><a href="/user/my-orders">My Orders</a></li>
      </ul>
 
 

  <form>
    <div class="search">
      <span class="search-icon material-symbols-outlined">search</span>
      <input class="search-input" type="search" placeholder="Search">
    </div>
  </form>
      <a href="/user/cart">
      <i class="fa-solid fa-cart-shopping" id="cart">
        <% if(isLogged) { %>
        <span class="cart-count"><%= isLogged.cart.length %></span>
        <% } %>
      </i>
    </a>
     <% if(isLogged) { %>
      <h2 class="user-pic" onclick="toggkemenu()"><%= isLogged.username[0].toUpperCase() %></h2>
      <div class="sub-menu-wrap" id="subMenu">
        <div class="sub-menu">
          <div class="user-info">
            <h2 class="user-picc"><%= isLogged.username[0].toUpperCase() %></h2>
            <h3 class="sub-menu-text"><%= isLogged.username %></h3>
          </div>
          <hr />

         <div class="user-info">
          <a href="/user/logout" class="sub-menu-link">
            <img src="/images/user-logout.png" alt="" id="image-pic" />
            <p>Log Out </p>
            <span></span>
           </a>
          </a>
        </div>
      </div>

      <% } else {%>
        <h4  onclick="toggkemenu()" class="text-white m-3"> <i
          class="fa-solid fa-bars fs-4 "
        ></i></h4>
      <div class="sub-menu-wrap" id="subMenu">
        <div class="sub-menu">
          <a href="/user/login" class="sub-menu-link">
            <img src="/images/user.png" class="user-pic" alt="" id="image-pic" />
            <p>Log In</p>
            <span>></span>
          </a>
          <hr />

         
          <a href="/user/signup" class="sub-menu-link">
            <img src="/images/user-logout.png" alt="" id="image-pic" />
            <p>Sign Up</p>
            <span>></span>
          </a>
        </div>
      </div>

      <% } %>
    </nav>
  </div>